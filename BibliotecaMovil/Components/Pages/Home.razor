@page "/home"
@using Microsoft.AspNetCore.Authorization
@using BibliotecaMovil.Shared.DTOs
@using BibliotecaMovil.Shared.Interfaces
@using BibliotecaMovil.Services
@inject UsuarioSesionService Sesion
@inject IUsuarioService UsuarioService
@inject NavigationManager Nav
@attribute [Authorize]

<div style="background-color:#777FF5; min-height:100vh; display:flex; flex-direction:column;">
    <!-- Header -->
    <div style="padding:40px 20px 20px 20px; display:grid; grid-template-columns:1fr auto; grid-row-gap:10px;">
        <div style="grid-column:1 / span 2;">
            <div style="font-size:24px; font-weight:bold;">Biblioteca Movil</div>
        </div>

        <div>
            <div style="display:flex; flex-direction:column; gap:4px;">
                <div style="font-size:18px; font-weight:bold;">
                    Hola @(usuario is null ? "..." : usuario.NombreCompleto)
                </div>
                <div style="font-size:14px;">@DateTime.Now.ToString("dd/MM/yyyy")</div>
            </div>
        </div>

        <!-- Avatar + men√∫ -->
        <div style="justify-self:end; display:flex; align-items:flex-start; gap:10px;">
            <!-- Avatar -->
            <div style="width:48px; height:48px; border-radius:24px; background:white; display:flex; align-items:center; justify-content:center; margin-right:10px; overflow:hidden;">
                <img src="@AvatarUrl"
                     alt="Avatar"
                     style="width:48px; height:48px; object-fit:cover;" />
            </div>

            <!-- Bot√≥n men√∫ -->
            <NavLink href="/menu" style="text-decoration:none;">
                <div style="background:#0050FF;
                    padding:10px 8px;
                    display:flex;
                    flex-direction:column;
                    gap:4px;
                    align-self:flex-start;
                    cursor:pointer;">

                    <div style="height:2px; width:24px; background:black;"></div>
                    <div style="height:2px; width:24px; background:black;"></div>
                    <div style="height:2px; width:24px; background:black;"></div>
                </div>
            </NavLink>
        </div>
    </div>

    <!-- Contenido -->
    <div style="background:white; flex:1; overflow:auto;">
        <div style="padding:20px; display:flex; flex-direction:column; gap:24px;">

            @if (Cargando)
            {
                <div>Cargando...</div>
            }
            else if (!string.IsNullOrWhiteSpace(Error))
            {
                <div style="color:red;">@Error</div>
            }
            else
            {
                <!-- Stats -->
                <div>
                    <div style="font-size:18px; font-weight:bold; margin-bottom:12px;">Tus estadisticas</div>

                    <div style="display:flex; align-items:center; gap:10px; margin-bottom:6px;">
                        <span style="font-size:24px;">üìö</span>
                        <span>Libros Activos: <strong>@(detalle?.CantPrestamos ?? 0)</strong></span>
                    </div>

                    <div style="display:flex; align-items:center; gap:10px; margin-bottom:6px;">
                        <span style="font-size:24px;">üìÖ</span>
                        <span>Por devolver: <strong>@(PorDevolver ?? 0)</strong></span>
                    </div>

                    <div style="display:flex; align-items:center; gap:10px;">
                        <span style="font-size:24px;">üí¨</span>
                        <span>Rese√±as hechas: <strong>@(detalle?.CantResenas ?? 0)</strong></span>
                    </div>
                </div>

                <!-- Atajos -->
                <div style="display:grid; grid-template-columns:1fr 1fr; grid-row-gap:20px; grid-column-gap:20px;">
                    <button @onclick="IrLibros"
                            style="height:90px; background:#0050FF; color:black; border:none; font-size:16px;">
                        Libros
                    </button>

                    <button @onclick="IrPrestamos"
                            style="height:90px; background:#0050FF; color:black; border:none; font-size:16px;">
                        Prestamos
                    </button>

                    <button @onclick="IrResenas"
                            style="height:90px; background:#0050FF; color:black; border:none; font-size:16px;">
                        Rese√±as
                    </button>

                    <button @onclick="IrFavoritos"
                            style="height:90px; background:#0050FF; color:black; border:none; font-size:16px;">
                        Favoritos
                    </button>

                    <button @onclick="IrSanciones"
                            style="height:90px; background:#0050FF; color:black; border:none; font-size:16px;">
                        Sanciones
                    </button>
                </div>
                @if (!string.IsNullOrWhiteSpace(mensaje))
                {
                    <div style="background:#e6f0ff; border-radius:14px; padding:12px; margin-bottom:12px;">
                        @mensaje
                    </div>
                }
                <div style="font-size:18px; font-weight:bold;">Novedades</div>

                @if (!sanciones.Any(s => s.EstaActiva))
                {
                    <div style="background:#fff3cd; border-radius:12px; padding:12px;">
                        ‚ö†Ô∏è Ten√©s @cantidadSancionesActivas sanci√≥n(es) activa(s)
                        por un total de <b>$ @TotalDeudaActiva.ToString("N0")</b>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private UsuarioPublicoDto? usuario;
    private UsuarioDetalleDto? detalle;
    private bool Cargando = true;
    private string Error = "";
    private string? mensaje;
    private List<SancionDto> sanciones = new();
    private int cantidadSancionesActivas => sanciones.Count(s => s.EstaActiva);
    private void Pagar(SancionDto s)
    {
        // Por ahora solo UI. Despu√©s lo conectamos a un endpoint real.
        mensaje = $"Simulaci√≥n: pagar sanci√≥n #{s.IdSancion} por $ {(s.Monto ?? 0m).ToString("N0")}";
    }

    private decimal TotalDeudaActiva =>
    sanciones
        .Where(s => s.EstaActiva)
        .Sum(s => s.Monto ?? 0m);

    // Direccion repetitiva en todo link Claudinary
    private const string CloudinaryBase = "https://res.cloudinary.com/dbbqddxcd/image/upload/";
    // Imagen de usuario si √©ste no posee imagen
    private const string DefaultAvatarPath = "v1771518924/Avatar_p2iu85.png";

    private string AvatarUrl =>
        string.IsNullOrWhiteSpace(usuario?.ImgUrl)
            ? CloudinaryBase + DefaultAvatarPath
            : CloudinaryBase + usuario!.ImgUrl;

    // Si todav√≠a no ten√©s este c√°lculo, lo dejamos como "igual a activos" para que no quede vac√≠o.
    // Ideal: agregar a UsuarioDetalleDto o hacer endpoint espec√≠fico (por devolver = pr√©stamos con FechaDevolucion null, por ejemplo).
    private int? PorDevolver => detalle?.CantPrestamos;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            usuario = await Sesion.ObtenerUsuarioAsync();

            // Si entran a /home sin login, lo mand√°s al login
            if (usuario is null)
            {
                Nav.NavigateTo("/");
                return;
            }

            // ‚úÖ Traer estad√≠sticas desde el endpoint detalle
            detalle = await UsuarioService.GetDetalleAsync(usuario.IdUsuario);
        }
        catch (Exception ex)
        {
            Error = "Error: " + ex.Message;
        }
        finally
        {
            Cargando = false;
        }
    }
    void IrLibros() => Nav.NavigateTo("/libros");
    void IrPrestamos() => Nav.NavigateTo("/prestamos");
    void IrResenas() => Nav.NavigateTo("/resenas");
    void IrFavoritos() => Nav.NavigateTo("/favoritos");
    void IrSanciones() => Nav.NavigateTo("/sanciones");
}