@page "/autor-nuevo"

<div style="background:#777FF5; min-height:100vh; padding:60px 20px 20px 20px;">
    <div style="font-size:28px; font-weight:bold; margin-bottom:20px;">Autores</div>

    <div style="background:white; padding:20px; border-radius:4px;">
        <div style="margin-bottom:10px;">Crear nuevo Autor</div>

        <div style="margin-top:6px;">Nombre</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />

        <div style="margin-top:10px;">Apellido</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />

        <div style="margin-top:10px;">Pais</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />

        <div style="display:grid; grid-template-columns:1fr 1fr; grid-column-gap:20px; margin-top:20px;">
            <button style="height:44px; background:#0050FF; border:none; color:black;">Agregar</button>
            <button style="height:44px; background:red; border:none; color:black;">Cancelar</button>
        </div>

        <div style="margin-top:24px;">Lista Autores</div>
        <div style="margin-top:8px; background:#DDDDDD; height:150px;"></div>

        <button style="margin-top:30px; width:100%; height:48px; background:#0050FF; border:none; color:black; font-size:18px;">
            Realizar Prestamo
        </button>
    </div>
</div>
