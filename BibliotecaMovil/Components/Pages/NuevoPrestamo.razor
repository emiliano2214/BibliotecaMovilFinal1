@page "/prestamo-nuevo"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Bibliotecario")]

<div style="background:#777FF5; min-height:100vh; padding:60px 20px 20px 20px;">
    <div style="font-size:28px; font-weight:bold; margin-bottom:20px;">Prestamo</div>

    <div style="background:white; padding:20px;">
        <div>Crear nuevo Prestamo</div>

        <div style="margin-top:10px;">Usuario</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />

        <div style="margin-top:10px;">Fecha de inicio</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />

        <div style="margin-top:10px;">Agregar Ejemplar</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />

        <button style="margin-top:14px; height:44px; background:#0050FF; border:none; color:black;">
            Agregar Ejemplar
        </button>

        <div style="margin-top:20px;">Lista Ejemplares prestados</div>
        <div style="margin-top:8px; background:#DDDDDD; height:150px;"></div>

        <button style="margin-top:30px; width:100%; height:48px; background:#0050FF; border:none; color:black; font-size:18px;">
            Realizar Prestamo
        </button>
    </div>
</div>
