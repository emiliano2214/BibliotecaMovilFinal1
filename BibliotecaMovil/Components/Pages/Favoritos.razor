@page "/favoritos"

<div style="background:#777FF5; min-height:100vh; display:flex; flex-direction:column;">
    <div style="padding:40px 20px 10px 20px; display:grid; grid-template-columns:1fr auto; column-gap:10px;">
        <div>
            <div style="margin-bottom:6px;">Favorito</div>
            <input style="width:100%; height:36px; background:#DDDDDD; border:none;" />
        </div>
        <div style="background:#0050FF; padding:8px 6px; display:flex; flex-direction:column; gap:3px; align-self:flex-start;">
            <div style="height:2px; width:22px; background:black;"></div>
            <div style="height:2px; width:22px; background:black;"></div>
            <div style="height:2px; width:22px; background:black;"></div>
        </div>
    </div>
    <div style="flex:1; background:white; padding:16px 20px 0 20px;">
        <div style="margin-bottom:10px;">Lista coincidencias</div>
        @for (int i = 0; i < 4; i++)
        {
            <div style="height:70px; border-bottom:2px solid #777FF5; margin-bottom:10px;"></div>
        }
    </div>
</div>
