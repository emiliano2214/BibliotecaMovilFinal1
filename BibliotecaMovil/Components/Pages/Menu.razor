@page "/menu"
@inject NavigationManager Nav

<div style="background-color:#777FF5; min-height:100vh; display:flex; justify-content:center; align-items:flex-start; padding-top:80px;">

    <div style="display:grid; grid-template-columns:120px 120px; grid-row-gap:30px; grid-column-gap:30px;">

        <NavLink href="/cuenta" style="@LinkStyle">
            <div style="@CardStyle">
                <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517191/usuario_jb2qbo.png alt="Usuario" style="@IconStyle" />
                <div style="@TextStyle">Usuario</div>
            </div>
        </NavLink>

        <NavLink href="/libros" style="@LinkStyle">
            <div style="@CardStyle">
                <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517193/Libro_kikxig.png alt="Libros" style="@IconStyle" />
                <div style="@TextStyle">Libros</div>
            </div>
        </NavLink>

        <NavLink href="/prestamos" style="@LinkStyle">
            <div style="@CardStyle">
                <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517191/Ejemplares_aoiltg.png alt="Prestamos" style="@IconStyle" />
                <div style="@TextStyle">Préstamos</div>
            </div>
        </NavLink>

        <AuthorizeView Roles="Admin,Bibliotecario">
            <NavLink href="/busqueda" style="@LinkStyle">
                <div style="@CardStyle">
                    <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517191/Buscar_horcyw.png alt="Busqueda" style="@IconStyle" />
                    <div style="@TextStyle">Búsqueda</div>
                </div>
            </NavLink>
        </AuthorizeView>
        

        <NavLink href="/resenas" style="@LinkStyle">
            <div style="@CardStyle">
                <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517191/Rese%C3%B1a_ktyu8c.png alt="Reseñas" style="@IconStyle" />
                <div style="@TextStyle">Reseñas</div>
            </div>
        </NavLink>

        <NavLink href="/favoritos" style="@LinkStyle">
            <div style="@CardStyle">
                <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517191/Favoritos_iccqiw.png alt="Favoritos" style="@IconStyle" />
                <div style="@TextStyle">Favoritos</div>
            </div>
        </NavLink>

        <AuthorizeView Roles="Admin,Bibliotecario">
        <NavLink href="/editoriales" style="@LinkStyle">
            <div style="@CardStyle">
                    <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517191/Editorial_bdbxna.png alt="Editoriales" style="@IconStyle" />
                <div style="@TextStyle">Editoriales</div>
            </div>
        </NavLink>
        </AuthorizeView>

        <div style="@CardStyle" @onclick="Logout">
            <img src=https://res.cloudinary.com/dbbqddxcd/image/upload/v1771517814/Salir_qgyeoc.png alt="Salir" style="@IconStyle" />
            <div style="@TextStyle">Salir</div>
        </div>

    </div>
</div>

@code
{
    // Para que el <a> (NavLink) no pinte azul ni subraye
    string LinkStyle =
        "text-decoration:none;" +
        "color:black;" +
        "display:block;";

    // Tarjeta clickeable (mantiene tu tamaño 120x120 y el fondo)
    string CardStyle =
        "width:120px;" +
        "height:120px;" +
        "background:#0050FF;" +
        "display:flex;" +
        "flex-direction:column;" +
        "justify-content:center;" +
        "align-items:center;" +
        "gap:8px;" +
        "cursor:pointer;" +
        "-webkit-tap-highlight-color: transparent;" +
        "transition:0.12s;";

    // Ícono
    string IconStyle =
        "width:70px;" +
        "height:70px;";

    // Texto negro
    string TextStyle =
        "font-size:14px;" +
        "font-weight:600;" +
        "color:black;" +
        "text-align:center;";

    void Logout()
    {
        // TODO: acá podés borrar token/estado de sesión (localStorage, auth state, etc.)
        Nav.NavigateTo("/", true); // true => fuerza recarga limpia
    }
}
