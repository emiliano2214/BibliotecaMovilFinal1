@page "/registro"

<div style="background:#777FF5; min-height:100vh; padding:60px 20px 20px 20px;">
    <div style="font-size:32px; text-align:center; margin-bottom:30px;">Registro</div>

    <div style="background:white; padding:20px;">
        <div>Nombre completo</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none; margin-bottom:10px;" />

        <div>Email</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none; margin-bottom:10px;" />

        <div>Nombre de usuario</div>
        <input style="width:100%; height:36px; background:#DDDDDD; border:none; margin-bottom:10px;" />

        <div>Contraseña</div>
        <input type="password" style="width:100%; height:36px; background:#DDDDDD; border:none; margin-bottom:10px;" />

        <div>Repetir Contraseña</div>
        <input type="password" style="width:100%; height:36px; background:#DDDDDD; border:none; margin-bottom:20px;" />

        <div style="display:grid; grid-template-columns:1fr 1fr; grid-column-gap:20px; margin-top:10px;">
            <button style="height:44px; background:#0050FF; border:none; color:black;">Aceptar</button>
            <button style="height:44px; background:red; border:none; color:black;">Cancelar</button>
        </div>
    </div>
</div>
