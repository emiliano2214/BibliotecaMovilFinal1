@page "/resenas"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Lector")]

<div style="background:#777FF5; min-height:100vh; display:flex; flex-direction:column;">
    <div style="padding:60px 20px 20px 20px; display:grid; grid-template-columns:1fr auto;">
        <div style="font-size:28px; font-weight:bold;">Reseña</div>
        <div>
            <!-- Menú -> /menu -->
            <NavLink href="/menu" style="text-decoration:none; color:black; display:block;">
                <div style="background:#0050FF; padding:8px 6px; display:flex; flex-direction:column; gap:3px; cursor:pointer;">
                    <div style="height:2px; width:20px; background:black;"></div>
                    <div style="height:2px; width:20px; background:black;"></div>
                    <div style="height:2px; width:20px; background:black;"></div>
                </div>
            </NavLink>
        </div>
    </div>

    <div style="flex:1; background:white; padding:20px;">
        <div style="height:100px; border-bottom:2px solid #777FF5; margin-bottom:20px;"></div>
        <div style="height:100px; border-bottom:2px solid #777FF5; margin-bottom:20px;"></div>

        <button style="margin-top:20px; width:100%; height:48px; background:#0050FF; border:none; color:black; font-size:18px;">
            Realizar reseña
        </button>
    </div>
</div>
